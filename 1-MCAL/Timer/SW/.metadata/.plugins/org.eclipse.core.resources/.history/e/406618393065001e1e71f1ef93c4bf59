#ifndef TIMER_INTERFACE_H_
#define TIMER_INTERFACE_H_

void Timer0_Init(Timer_Mode mode , Timer_Clk clk);
void Timer0_ClkSelect(Timer_Clk clk);

uint8 READ_COUNT();
void delayms(uint16 delay);

void Timer0_SetCallBack (void(*ROUTINE)(void));
void FPWM_50_INIT(void);
void F_PWM_OCR(uint8 ocr);

void Timer1_Init(void);

void Servo_Go(uint8 Degree);

double mapRange(double value, double oldMin, double oldMax, double newMin, double newMax);


/* Timer Modes */
typedef enum{
	Normal,
	PWM,
	CTC,
	Fast_PWM
}Timer_Mode;


/* Select Clock Source and Prescalars */
typedef enum {
	NO_SOURCE,
	NO_PRE,
	PRE8,
	PRE64,
	PRE256,
	PRE1024,
	EX_FALLING,
	EX_RISING
}Timer_Clk;


typedef enum CMP_OP_MODE {
	NormalC,
	Reserved,
	NON_INV,
	INV
}Cmp_Mode;




#endif 
